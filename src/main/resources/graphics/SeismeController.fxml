<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="graphics.SeismeController"
            stylesheets="@style.css"
            minWidth="950" minHeight="500"
            style="-fx-background-color: black">
    <top>
            <Label text="Recherche de séismes" styleClass="titre"/>
    </top>
    <left>
        <VBox>
            <Button id="menu1" styleClass="menu1Button"/>
            <Button id="menu2" styleClass="menu2Button"/>
            <Button id="menu3" styleClass="menu3Button"/>
        </VBox>
    </left>
    <center>
        <GridPane>
            <Label text="Type de séisme" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <ComboBox GridPane.columnIndex="0" GridPane.rowIndex="1">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Séisme"/>
                        <String fx:value="merde"/>
                    </FXCollections>
                </items>
            </ComboBox>
            <Label text="Localisation" GridPane.columnIndex="0" GridPane.rowIndex="3"/>


        </GridPane>
    </center>
